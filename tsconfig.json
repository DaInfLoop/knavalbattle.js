{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "nodenext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Output options
    "outDir": "dist",                 // emit compiled files here
    "declaration": true,              // generate .d.ts for TS consumers
    "declarationMap": true,           // optional: map declarations
    "sourceMap": true,                // optional: source maps for debugging

    // Bundler mode
    "moduleResolution": "nodenext",
    "verbatimModuleSyntax": true,
    "noEmit": false,                  // <-- allow emitting

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
